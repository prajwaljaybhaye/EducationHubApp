<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To
         Android Education Hub By-Prajwal"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:layout_margin="20sp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/imageView"
        android:layout_width="200sp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="300dp"

        >
        <ImageView
            android:id="@+id/prajwalImg"
            android:layout_width="200sp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/prajwal"
            android:background="@color/white"
            />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/letsGoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Go ->"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="bottom"

        android:layout_marginTop="90dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50sp">

        <Button
            android:id="@+id/signBtn"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginRight="20sp"
            android:backgroundTint="@color/holo_call"

            />

        <Button
            android:id="@+id/linkdinBtn"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Follow"
            android:backgroundTint="@color/holo_linkdin"

            />

    </LinearLayout>

</LinearLayout>